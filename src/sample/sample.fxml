<?import javafx.geometry.Insets?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<BorderPane fx:controller="sample.Controller"
            xmlns:fx="http://javafx.com/fxml">
    <left>
        <Label text="left" style="-fx-border-color: blue; -fx-border-width: 3; -fx-border-style: dashed"
        BorderPane.alignment="center"></Label>
    </left>


<bottom>
    <HBox
            xmlns:fx="http://javafx.com/fxml" spacing="10" alignment="bottom_right">
        <padding>
            <Insets bottom="10" right="10"></Insets>
        </padding>
        <Button text="Okay" prefWidth="90"/>
        <Button text="Cancel" prefWidth="90"/>
        <Button text="Help" prefWidth="90"/>
    </HBox>
</bottom>


</BorderPane>